;; This buffer is for notes you don't want to save, and for Lisp evaluation.
;; If you want to create a file, visit that file with C-x C-f,
;; then enter the text in that file's own buffer.

Name = "client-release".
Vsn = "0.1-SNAPSHOT".
File = "/home/ghaskins/sandbox/git/edist/demo/client/release/target/" ++ Name ++ "-" ++ Vsn ++ ".tar.gz".
ok = edist_controller:create_release(Name, Vsn, "", []).
{ok, ODev} = edist_controller:upload_release(Name, Vsn, matchall, []).
{ok, IDev} = file:open(File, [read, binary]).
file:copy(IDev, ODev).
file:close(IDev).
edist_controller:close_stream(ODev).
ok = edist_controller:commit_release(Name, Vsn, []).
ok = edist_controller:create_group("default", matchall, [Name], []).





